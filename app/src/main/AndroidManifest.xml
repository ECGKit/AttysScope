<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tech.glasgowneuro.www.attysplot">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_attys"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".AttysPlot">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PrefsActivity"
            android:theme="@android:style/Theme.Black.NoTitleBar" />
        <activity
            android:name=".Attys2ScienceJournalADC1Settings"
            android:excludeFromRecents="true" android:launchMode="singleInstance"
            android:taskAffinity="" android:theme="@android:style/Theme.Dialog" />
        <activity
            android:name=".Attys2ScienceJournalADC2Settings"
            android:excludeFromRecents="true" android:launchMode="singleInstance"
            android:taskAffinity="" android:theme="@android:style/Theme.Dialog" />
        <!--
     ATTENTION: This was auto-generated to add Google Play services to your project for
     App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information.
        -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <service android:name=".Attys2ScienceJournal"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="com.google.android.apps.forscience.whistlepunk.SCALAR_SENSOR"/>
            </intent-filter>
        </service>

    </application>

</manifest>